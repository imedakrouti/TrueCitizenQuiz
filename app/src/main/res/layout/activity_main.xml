<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ImageView
    android:src="@drawable/ic_launcher_foreground"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="TODO" />
    <TextView
        android:id="@+id/answer_text"
        android:text="@string/question_declaration"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="34dp"
    android:orientation="horizontal">
<Button
    android:id="@+id/true_button"
    android:text="@string/true_text"
    android:layout_width="wrap_content"
    android:background="@drawable/custom_rounded_color"
    android:textColor="@android:color/white"
    android:textSize="18sp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:layout_marginRight="12dp"
    android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/false_button"
        android:text="@string/false_text"
        android:layout_width="wrap_content"
        android:background="@drawable/custom_rounded_color"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:orientation="horizontal">
        <ImageButton
            android:contentDescription="@string/next_text"
            android:id="@+id/prev_button"
            android:background="@drawable/custom_rounded_color"
            android:src="@drawable/baseline_navigate_before_white_18dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:contentDescription="@string/next_text"
            android:id="@+id/next_button"
            android:background="@drawable/custom_rounded_color"
            android:src="@drawable/baseline_navigate_next_white_18dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>
</LinearLayout>